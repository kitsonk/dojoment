extends main

prepend css
  link(rel="stylesheet", type="text/css", href="/_static/css/wiki.css", media="all")

block header
  .header
    .leader !{leader}
    .logo
      a(href="//dojotoolkit.org", target="_blank")
        img(src="/_static/images/dojoToolkitLogo.png", height="32", width="71")
    .crumbs !{crumbs}

block scripts
  script(type="text/javascript")
    dojoConfig = {
      async: 1,
      baseUrl: "/#{root}/",
      cdn: "#{cdn}",
      packages: [{
        name: "dojo",
        location: "dojo"
      },{
        name: "dijit",
        location: "dijit"
      },{
        name: "dojoment-client",
        location: "dojoment-client"
      }],
      deps: ["dojoment-client/main"]
    };
  script(type="text/javascript", src="/#{root}/dojo/dojo.js")

block content
  .refdoc_wrap
    #toc.reftoc 
      .toc_header Contents
      .toc_content !{toc}
    .refdoc !{doc}

block footer
  .copyright !{copyright}